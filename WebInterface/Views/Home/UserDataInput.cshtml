@model DataProcessor.UserDataModel

@{
    ViewBag.Title = "UserDataInput";
}
@if(ViewBag.Name != null)
{
    <h2>Welcome @ViewBag.Name !</h2>
}
<h2>UserDataInput</h2>


@using (Html.BeginForm(
    "UserDataInput",
    "Home",
    FormMethod.Post
    ))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>UserDataModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                First name : @Html.TextBoxFor(s => s.FirstName) <br/>
                Last name : @Html.TextBoxFor(s => s.LastName) <br />
                Address : @Html.TextBoxFor(s => s.Address) <br />
                Gender : @Html.EnumDropDownListFor(s => s.UserGender, new { @class = "form-group" })> <br />
                Age : @Html.TextBoxFor(s => s.Age, new { @type = "number" }) <br />
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<form method="post" action="UserDataLog">
    <input type="submit" value="Log It" />
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
